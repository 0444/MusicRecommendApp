<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/OST"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/Hash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/Ani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="애니 ost" />

        <RadioButton
            android:id="@+id/Drama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="드라마 ost" />

        <RadioButton
            android:id="@+id/Movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영화 ost" />
    </RadioGroup>

    <TableLayout
        android:id="@+id/Hash"
        android:layout_width="305dp"
        android:layout_height="183dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/H_idol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#아이돌" />

            <CheckBox
                android:id="@+id/H_band"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#밴드" />

            <CheckBox
                android:id="@+id/H_trot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#트로트" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/H_healing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#힐링" />

            <CheckBox
                android:id="@+id/H_calm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#잔잔한" />

            <CheckBox
                android:id="@+id/H_dreamlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#몽환적인" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/H_daybreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#새벽" />

            <CheckBox
                android:id="@+id/H_depressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#우울할때" />

            <CheckBox
                android:id="@+id/H_noisily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#시끌시끌한" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/H_excited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#신나는" />

            <CheckBox
                android:id="@+id/H_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#산책할때" />

            <CheckBox
                android:id="@+id/H_summer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#여름" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/H_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#박력있는" />

            <CheckBox
                android:id="@+id/H_strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#강렬한" />

            <CheckBox
                android:id="@+id/H_grand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#웅장한" />
        </TableRow>

    </TableLayout>

    <RadioGroup
        android:id="@+id/Country"
        android:layout_width="91dp"
        android:layout_height="144dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/Singer">

        <RadioButton
            android:id="@+id/Korea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한국" />

        <RadioButton
            android:id="@+id/Japan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일본" />

        <RadioButton
            android:id="@+id/China"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중국" />

        <RadioButton
            android:id="@+id/Rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="29dp"
        android:text="곡 제목"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="제목을 적어주세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="가수 이름을 적어주세요"
        app:layout_constraintBottom_toTopOf="@+id/OST"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="66dp"
        android:layout_height="26dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="289dp"
        android:layout_marginRight="289dp"
        android:layout_marginBottom="21dp"
        android:text="필터"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Singer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="가수"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="132dp"
        android:text="국가"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/Country"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="기타"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/OST"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="280dp"
        android:layout_marginRight="280dp"
        android:layout_marginBottom="13dp"
        android:text="해시태그"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Hash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SeachButton"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:text="검색하기"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
